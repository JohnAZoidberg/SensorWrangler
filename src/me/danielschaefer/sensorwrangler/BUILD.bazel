load("@rules_java//java:defs.bzl", "java_binary")
load("@io_bazel_rules_kotlin//kotlin:jvm.bzl", "kt_jvm_library")
load("@io_bazel_rules_kotlin//kotlin:lint.bzl", "ktlint_fix", "ktlint_test")

kt_jvm_library(
    name = "app_lib",
    srcs = glob(["**/*.kt"]) + glob(["**/*.java"]),
    deps = [
        "//:java_deps",
        "@j_antplus//:j_antplus",
    ],
)

ktlint_test(
    name = "lint_test",
    srcs = glob(["**/*.kt"]),
)

ktlint_fix(
    name = "lint_fix",
    srcs = glob(["**/*.kt"]),
)

java_binary(
    name = "Cli",
    main_class = "me.danielschaefer.sensorwrangler.Cli",
    runtime_deps = [":app_lib"],
)

java_binary(
    name = "Gui",
    main_class = "me.danielschaefer.sensorwrangler.Main",
    runtime_deps = [":app_lib"],
)
